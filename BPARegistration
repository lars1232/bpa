    while(in.hasNext()){
    	in.nextLine();
    	counter++;
    }
    String[] bpaConstant = new String[counter];
    in = new Scanner(new File("BPANames.txt"));

    for(int i=0;i<bpaConstant.length;i++){
    	bpaConstant[i] = in.nextLine();
   		}

